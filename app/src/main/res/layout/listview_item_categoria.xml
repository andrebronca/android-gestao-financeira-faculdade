<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/categoria_adapter_cor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/categoria_adapter_tipo"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/categoria_adapter_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/categoria_adapter_cor"
        android:layout_toRightOf="@+id/categoria_adapter_cor"
        android:text="TextView" />

    <TextView
        android:id="@+id/categoria_adapter_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoria_adapter_descricao"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/categoria_adapter_cor"
        android:layout_toRightOf="@+id/categoria_adapter_cor"
        android:text="TextView" />

    <TextView
        android:id="@+id/categoria_adapter_ativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/categoria_adapter_descricao"
        android:text="TextView" />
</RelativeLayout>