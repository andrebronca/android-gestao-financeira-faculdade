<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_adapter_descricao"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/titulo_adapter_categoria_imagem"
        android:background="@android:color/transparent"
        android:layout_below="@+id/titulo_adapter_descricao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_adapter_categoria"
        android:layout_below="@+id/titulo_adapter_descricao"
        android:layout_toRightOf="@+id/titulo_adapter_categoria_imagem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_adapter_pessoa"
        android:layout_alignBottom="@+id/titulo_adapter_categoria_imagem"
        android:layout_toRightOf="@+id/titulo_adapter_categoria_imagem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_adapter_categoria_imagem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:id="@+id/linear_interno">

        <TextView
            android:text="TextView"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_adapter_emissao" />

        <TextView
            android:text="TextView"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_adapter_vencimento" />
    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:id="@+id/titulo_adapter_valor"
        android:layout_below="@+id/linear_interno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/titulo_adapter_valor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/titulo_adapter_tipo" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_adapter_qtdparcela"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/titulo_adapter_valor"
        android:textAlignment="center"
        android:layout_width="180dp" />

</RelativeLayout>