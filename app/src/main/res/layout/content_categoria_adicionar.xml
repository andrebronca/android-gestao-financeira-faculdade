<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_categoria_adicionar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="br.com.andrebronca.pluscontrol.CategoriaAdicionar"
        tools:showIn="@layout/activity_categoria_adicionar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição" />

        <EditText
            android:id="@+id/edt_categoria_ds_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters">

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_cad_categoria_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/spnTipCategoria"
                android:text="Tipo" />

            <Spinner
                android:id="@+id/spnTipCategoria"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:paddingStart="100dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_cad_categoria_cor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/spnCorCategoria"
                android:text="Cor" />

            <Spinner
                android:id="@+id/spnCorCategoria"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:paddingStart="100dp"
                android:textAlignment="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_cad_categoria_ativo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tbtn_categoria_ativo"
                android:text="Ativo" />

            <ToggleButton
                android:id="@+id/tbtn_categoria_ativo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:checked="true"
                android:textAllCaps="false"
                android:textOff="Não"
                android:textOn="Sim" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_categoria_salvar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_cadastro"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/ic_btn_salvar_circle_verde_24dp"
            android:drawableRight="@drawable/ic_btn_salvar_circle_verde_24dp"
            android:text="Salvar"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_categoria_cancelar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_cadastro"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/ic_btn_cancelar_circle_red_24dp"
            android:drawableRight="@drawable/ic_btn_cancelar_circle_red_24dp"
            android:text="Cancelar"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>