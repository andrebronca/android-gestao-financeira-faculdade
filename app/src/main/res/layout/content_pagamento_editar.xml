<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_pagamento_editar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="br.com.andrebronca.pluscontrol.PagamentoEditar"
        tools:showIn="@layout/activity_pagamento_editar">

        <TextView
            android:id="@+id/tv_pagamento_editar_conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Conta" />

        <Spinner
            android:id="@+id/spn_pagamento_editar_conta"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_pagamento_editar_conta" />

        <EditText
            android:id="@+id/edt_pagamento_editar_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spn_pagamento_editar_conta"
            android:ems="10"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="10" />

        <TextView
            android:id="@+id/tv_pagamento_editar_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edt_pagamento_editar_valor"
            android:layout_alignBottom="@+id/edt_pagamento_editar_valor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableEnd="@drawable/ic_ajuda_clique_24dp"
            android:text="Valor R$" />

        <TextView
            android:id="@+id/tv_pagamento_editar_historico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_pagamento_editar_data"
            android:layout_marginTop="16dp"
            android:text="Descrição" />

        <EditText
            android:id="@+id/edt_pagamento_editar_historico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_pagamento_editar_historico"
            android:ems="10"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="60" />

        <Button
            android:id="@+id/btn_pagamento_editar_salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edt_pagamento_editar_historico"
            android:layout_marginTop="25dp"
            android:drawableEnd="@drawable/ic_btn_salvar_circle_verde_24dp"
            android:text="Salvar"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_pagamento_editar_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_pagamento_editar_salvar"
            android:drawableEnd="@drawable/ic_btn_cancelar_circle_red_24dp"
            android:text="Cancelar"
            android:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/linear_interno_pagamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_pagamento_editar_valor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pagamento_data_emissao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Emissão: " />

            <TextView
                android:id="@+id/tv_pagamento_data_vencimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vencimento: " />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pagamento_editar_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linear_interno_pagamento"
            android:drawableEnd="@drawable/ic_data_selecionar_24dp"
            android:text="Data"
            android:textAllCaps="false" />

    </RelativeLayout>
</ScrollView>