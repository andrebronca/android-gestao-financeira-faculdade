<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_cliente_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.andrebronca.pluscontrol.ClienteLista"
    tools:showIn="@layout/activity_cliente_lista">

    <EditText
        android:id="@+id/edt_cliente_pesquisar_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_cliente_lista_limpar"
        android:layout_toStartOf="@+id/btn_cliente_lista_limpar"
        android:hint="Pesquisar um cliente"
        android:inputType="textCapCharacters" />

    <ListView
        android:id="@+id/ltv_cliente_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_cliente_pesquisar_lista"
        android:divider="#ccc"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/btn_cliente_lista_limpar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ltv_cliente_lista"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_cancelar_24dp"
        android:drawableStart="@drawable/ic_cancelar_24dp" />
</RelativeLayout>
