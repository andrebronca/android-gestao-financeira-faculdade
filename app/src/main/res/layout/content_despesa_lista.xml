<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_despesa_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.andrebronca.pluscontrol.DespesaLista"
    tools:showIn="@layout/activity_despesa_lista">

    <EditText
        android:id="@+id/edt_despesa_pesquisar_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_despesa_lista_limpar"
        android:layout_toStartOf="@+id/btn_despesa_lista_limpar"
        android:hint="Pesquisar uma despesa"
        android:inputType="textCapCharacters" />

    <ListView
        android:id="@+id/ltv_despesa_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_despesa_data_inicial_vencimento"
        android:divider="#ccc"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/btn_despesa_lista_limpar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_cancelar_24dp"
        android:drawableStart="@drawable/ic_cancelar_24dp" />

    <Button
        android:id="@+id/btn_despesa_periodo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_despesa_lista_limpar"
        android:drawableLeft="@drawable/ic_periodo_24dp"
        android:drawableStart="@drawable/ic_periodo_24dp" />

    <Button
        android:id="@+id/btn_despesa_data_final_vencimento"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_despesa_periodo"
        android:layout_alignBottom="@+id/btn_despesa_periodo"
        android:layout_toLeftOf="@+id/btn_despesa_lista_limpar"
        android:layout_toStartOf="@+id/btn_despesa_lista_limpar"
        android:drawableEnd="@drawable/ic_data_fim_24dp"
        android:text="Venc. Final"
        android:textAllCaps="false"
        android:layout_width="140dp" />

    <Button
        android:id="@+id/btn_despesa_data_inicial_vencimento"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_data_inicio_24dp"
        android:text="Venc. Inicial"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/btn_despesa_data_final_vencimento"
        android:layout_alignBottom="@+id/btn_despesa_data_final_vencimento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="140dp" />

</RelativeLayout>
